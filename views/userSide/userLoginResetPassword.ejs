<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <!-- <link rel="shortcut icon" href="#" type="image/x-icon" /> -->
    <!-- Bootstrap css cdn link -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <!-- end of Bootstrap css cdn link -->
    <!-- Style css -->
    <link rel="stylesheet" href="/userSide/css/resetPassword.css" />
    <!-- end of Style css -->
</head>
<body>
    
    <!-- header -->
    <%- include('../includes/userSide/header') %>
    <!-- end of header -->

    <!-- main content -->
    <main>
        <section>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-12 m-0 loginsection d-flex align-items-center justify-content-center">
                        <div class="loginbox">
                            <div class="headingLogin d-inline-block">
                                <p>Reset Password</p>
                            </div>
                            <div class="inputForm d-inline-block">
                                <form action="/loginResetPassword" method="post">
                                    <label class="d-block" for="password">New Password</label>
                                    <input class="d-block <%= (error?.newPass || error?.comErr)?'errDiv':'' %>" type="password" name="newPassword" />
                                    <p class="err <%= error?.newPass?'':'d-none' %>"><%= error?.newPass %></p>
                                    <label class="d-block" for="password">Confirm Password</label>
                                    <input class="d-block <%= (error?.conPass || error?.comErr)?'errDiv':'' %>" type="password" name="confirmPassword" />
                                    <p class="err <%= (error?.conPass || error?.comErr)?'':'d-none' %>"><%= error?.conPass  || error?.comErr %></p>
                                    <div class="text-center m-0">
                                        <button class="loginBtn" type="submit">Reset Password</button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- end of main content -->

    <!-- footer -->
    <%- include('../includes/userSide/footer') %>
    <!-- end of footer -->


    
    <!-- custom js -->
    <script src="/userSide/js/resetPassword.js"></script>
    <!-- end of custom js -->
    <!-- fontawesome -->
    <script src="https://kit.fontawesome.com/23d1247997.js" crossorigin="anonymous"></script>
    <!-- end of fontawesome -->
    <!-- Bootstrap script file -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <!--end of Bootstrap script file -->
</body>
</html>